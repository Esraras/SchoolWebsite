@model IEnumerable<School.Models.Student>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2  class="text-center font-weight-bold">Öğrenciler Listesi</h2><br />

<table class="table">
    <tr>
        <th>
            <label class="control-label col-md-2">Öğrenci İsmi</label>
        </th>
        <th>
            <label class="control-label col-md-2">Öğrenci Soyismi</label>
        </th>
        <th>
            <label class="control-label col-md-2">Sınıfı</label>
        </th>
        <th>
            <label class="control-label col-md-2">Okul Numarası</label>
        </th>
        <th>
            <label class="control-label col-md-2">Öğretmenin İsmi</label>
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Lname)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Class)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SchoolNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Teacher.TName)
        </td>

        <td>
            @Html.ActionLink("Düzenle", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Görüntüle", "Details", new { id=item.Id }) |
            @Html.ActionLink("Sil", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
