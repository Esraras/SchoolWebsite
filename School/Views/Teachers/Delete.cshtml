@model School.Models.Teacher

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2  class="text-center font-weight-bold">Öğretmen Silme Ekranı</h2>

<h3 >Bu öğretmeni silmek istediğinizden emin misiniz?</h3>
<div>
    <h4>Öğretmen bilgileri</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            <label class="control-label col-md-2">Öğretmen İsmi</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TName)
        </dd>

        <dt>
            <label class="control-label col-md-2">Öğretmen Soyismi</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TLname)
        </dd>

        <dt>
            <label class="control-label col-md-2">Öğretmen Branşı</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Branch)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Sil" class="btn btn-primary" /> |
            @Html.ActionLink("Geri Dön", "Index")
        </div>
    }
</div>
